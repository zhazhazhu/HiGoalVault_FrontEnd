{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "preserve",

    /* mini-program */
    "lib": ["esnext", "dom"],
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "types": ["@dcloudio/types", "@types/weixin-app", "wot-design-uni/global", "./components", "node"],
    "allowImportingTsExtensions": true,

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "sourceMap": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.NOT.vue", "components.d.ts", "plugins.d.ts", "async-*.d.ts"]
}
